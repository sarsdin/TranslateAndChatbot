<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginFm"
    >
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00FFFFFF"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            >

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/toolbar_slide"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:layout_marginEnd="15dp"
                android:background="#FFFFFF"
                android:clickable="true"
                android:contentDescription="이미지 입니다."
                android:scaleType="centerCrop"
                android:tint="#515151"
                app:layout_collapseMode="pin"
                app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_10"
                app:tintMode="src_in" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/toolbar_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="회원 정보 찾기"
                android:textSize="20sp"
                android:textStyle="bold" />


        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:id="@+id/find_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_baseline_supervised_user_circle_24"

            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="아이디 찾기"
            android:textColor="#252525"
            android:textSize="34sp"
            android:textStyle="bold"
             />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/find_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="400dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="117dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_baseline_vpn_key_24"
            android:tint="#03B399"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="cursive"
            android:text="비밀번호 찾기"
            android:textColor="#252525"
            android:textSize="34sp"
            android:textStyle="bold"
            />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
